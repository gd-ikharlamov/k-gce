{
    "builders": [{
        "type": "docker",
        "image": "k-gce/base-java:latest",
        "pull": false,
        "commit": "true"
    }],

    "provisioners": [{
        "type": "ansible",
        "playbook_file": "./ansible/sonarqube.yml",
        "ansible_env_vars": [
            "ANSIBLE_SSH_ARGS='-o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null -o IdentitiesOnly=yes'"
        ],
        "extra_arguments": []
    }],

    "post-processors": [{
        "type": "docker-tag",
        "repository": "k-gce/sonar",
        "tag": "latest"
    }]

}
